{{#link-to 'home.add' class="btn btn-primary btn-lrg"}}Add Item{{/link-to}}

  <h2>You Might Need</h2>
{{#if hasHidden}}
  <button type="button" class="btn btn-info" {{action "unhideAll"}}>Unhide All</button>
{{/if}}
<hr>
<ul class="itemList">
  {{#each model as |item|}}
    {{#unless item.isHidden}}
    {{#if item.diffs}}
      {{#if item.mightBeNeeded}}
        <li>
          <button type="button" class="btn btn-info">Add</button>
          <span class="itemName">{{item.name}}</span>
          <button type="button" class="btn btn-warning" {{action "hideItem" item}}>Hide</button>
        </li>
      {{/if}}
    {{/if}}
    {{/unless}}
  {{/each}}
</ul>
